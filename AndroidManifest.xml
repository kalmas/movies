<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.kalmas.movies"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application android:label="@string/app_name"
        	android:icon="@drawable/ic_launcher" >
        
        <activity android:name="net.kalmas.movies.MainActivity"
            	android:launchMode="singleTop">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Receives the search request. -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <!-- No category needed, because the Intent will specify this class component-->
            </intent-filter>
        </activity>
        
        <activity android:name="net.kalmas.movies.MoviesActivity"  />

        
		<provider android:name="net.kalmas.movies.MovieListingProvider"
                  android:authorities="net.kalmas.movies.MovieListingProvider" />
        
        <meta-data android:name="android.app.default_searchable"
                   android:value="net.kalmas.movies.MainActivity" />
        
    </application>

</manifest>
